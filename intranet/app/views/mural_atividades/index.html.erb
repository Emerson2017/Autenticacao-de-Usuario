<section style="text-align: center;">
<p id="notice"><%= notice %></p>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

<h1>Mural Atividades</h1>

<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>Atividade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mural_atividades.each do |mural_atividade| %>
      <tr>
        <td><%= mural_atividade.atividade %></td>

        <td><%= link_to 'Mostrar', mural_atividade, class:"btn btn-primary" %></td>

        <td><%= link_to 'Editar', edit_mural_atividade_path(mural_atividade), class:"btn btn-success" %></td>
        <% if can? :destroy, mural_atividade %>
          <td><%= link_to 'Excluir', mural_atividade, method: :delete, class:"btn btn-danger",  data: { confirm: 'Tem certeza que deseja EXCLUIR ?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-secondary button"><%= link_to 'Nova Atividade', new_mural_atividade_path, class:"new_atividade" %></button>
</section>