<section class="center" style="text-align: center; margin-top: 100px;">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

  <style type="text/css">
    .email{
    width: 300px;
    border-radius: 10px;
  }
    .senha{
      width: 200px;
      border-radius: 10px;
    }

  </style>

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class:"email" %>
    </div>

    <div class="field">
      <%= f.label :senha %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres no m√≠nimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class:"senha" %>
    </div>

    <div class="field">
      <%= f.label :confirmar_senha %><br />
      <%= f.password_field :confirm_password, autocomplete: "off", class:"senha" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>